<p id="notice"><%= notice %></p>

<h1 class="ds-text">Ideas</h1>

<table>
  <thead>
    <tr>
      <th class="ds-text">Name</th>
      <th class="ds-text">Description</th>
      <th class="ds-text">Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td class="ds-text"><%= idea.name %></td>
        <td class="ds-text"><%= idea.description %></td>
        <td class="ds-text"><%= "image" if idea.picture.present? %></td>
        <td class="ds-text"><%= link_to 'Show', idea %></td>
        <td class="ds-text"><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td class="ds-text"><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path %>
